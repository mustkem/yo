{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"],
      "@apps/*": ["apps/*"],
      "@utils/*": ["utils/*"]
    },
    "incremental": true
  }
}
